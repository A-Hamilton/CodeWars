public class Solution
{
    public static int minSum(int[] passed)
    {
      int[] first = getSB(passed);
      passed = removePreviousNums(passed, first[1], first[2]);
      int[] second = getSB(passed);
      int formula = (first[1] * first[2]) + (second[1] * second[2]);
      
      return formula; 
    }
  
  public static int[] getSB(int[] passed){
    int smallestNum = 10000000;
    int biggestNum = 0;
    for(int num : passed){
        if(smallestNum > num) smallestNum = num;
        if(biggestNum < num) biggestNum = num;
      }
    return new int[]{smallestNum, biggestNum};
  }
  
  public static int[] removePreviousNums(int[] passed, int biggest, int smallest){
    int remainingN1 = 0;
    int remainingN2 = 0;
    for(int num : passed) {
      if(num != biggest) {
         remainingN1 = num;
      }
      if(num != smallest){
        remainingN2 = num;
      }
    }
    return new int[]{remainingN1, remainingN2};
  }
}
